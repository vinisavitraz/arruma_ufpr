<body id="body-pd">
  {{>header}}
  <div class="container-fluid">
    <br>
    <br>
    <div class="row mx-4">
      <div class="col-8">
        <h1>Meus incidentes</h1>
      </div>
      {{#if (is_admin user.role)}}
      {{else}}
        <div class="col-2">
          <a class="btn btn-primary" href="/dashboard/incident/create?origin=userIncidents" role="button">Novo incidente</a>
        </div>
      {{/if}}
    </div>
    <br>
    <br>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <br>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav_link {{ set_active_tab "aberto" activeTab}}" href="/dashboard/incident/user?status=aberto">Abertos</a>
            </li>
            <li class="nav-item">
              <a class="nav_link {{ set_active_tab "pendente" activeTab}}" href="/dashboard/incident/user?status=pendente">Em atendimento</a>
            </li>
            <li class="nav-item">
              <a class="nav_link {{ set_active_tab "fechado" activeTab}}" href="/dashboard/incident/user?status=fechado">Finalizados</a>
            </li>
            <li class="nav-item">
              <a class="nav_link {{ set_active_tab "" activeTab}}" href="/dashboard/incident/user">Todos</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <br>
    <div id="searchForm" class="d-none">
      <div class="row g-5">
        <div class="col-md-12 col-lg-10">
          <button id="hideSearchForm" class="btn btn-danger border border-3">Cancelar pesquisa</button>
          <br>
          <br>
          <form method="POST" action="{{ uri }}" class="needs-validation" novalidate="" autocomplete="off">
            <input type="hidden" id="id" name="id" value="{{incidentType.id}}">
            <div class="row g-3">
              <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                <label for="id" class="form-label">ID</label>
                <input type="text" class="form-control" id="id" name="id" placeholder="Ex: 1234">
              </div>
              <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                <label for="title" class="form-label">Título</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Ex: Projetor danificado">
              </div>
              <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                <label for="title" class="form-label">Data de abertura</label>
                <input type="datetime-local" class="form-control" id="title" name="title">
              </div>
              <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                <label for="title" class="form-label">Data de fechamento</label>
                <input type="datetime-local" class="form-control" id="title" name="title">
              </div>
              <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                <label for="title" class="form-label">Nome do usuário</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Ex: João Silva">
              </div>
              <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                <label for="title" class="form-label">CPF do usuário</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Ex: 44220777083">
              </div>
              
              <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                <label for="incidentTypeId" class="form-label">Tipo de incidente</label>
                <select class="form-select form-control" id="incidentTypeId" name="incidentTypeId">
                  {{#select incident.incidentTypeId}}
                    <option value="0">Selecionar...</option>
                    {{#each incidentTypes}}
                      <option value="{{ this.id }}">{{ this.name }}</option>
                    {{/each}}
                  {{/select}}
                </select>
              </div>
              <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                <label for="locationId" class="form-label">Local</label>
                <select class="form-select form-control" id="locationId" name="locationId">
                  {{#select incident.locationId}}
                    <option value="0">Selecionar...</option>
                    {{#each locations}}
                      <option value="{{ this.id }}">{{ this.name }}</option>
                    {{/each}}
                  {{/select}}
                </select>
              </div>
              <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                <label for="itemId" class="form-label">Item</label>
                <select class="form-select form-control" id="itemId" name="itemId">
                  {{#select incident.itemId}}
                    <option value="0">Selecionar...</option>
                    {{#each items}}
                      <option value="{{ this.id }}">{{ this.name }}</option>
                    {{/each}}
                  {{/select}}
                </select>
              </div>
            </div>
            <br>
            <button id="searchButton" class="btn border border-3">Pesquisar <i class='bx bx-search nav_icon'></i></button>
          </form>
          <br>
          <nav class="navbar navbar-expand-md navbar-light">
            <p><label for="itemId" class="form-label">Filtros:</label></p>
            <div class="container-fluid">
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarFilter" aria-controls="navbarFilter" aria-expanded="false" aria-label="Toggle navigation">
                <i class='bx bx-filter nav_icon'></i>
              </button>
              <div class="collapse navbar-collapse" id="navbarFilter">
                <br>
                <br>
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <button type="button" class="btn btn-primary btn-rounded rounded-pill nav_link text-white mx-1">ID: 1</button>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
          <br>
        </div>
      </div>
    </div>
    <div id="searchButton" class="d-block">
      <button id="showSearchFormButton" class="btn border border-3">Pesquisar <i class='bx bx-search nav_icon'></i></button>
    </div>
    <br>
    <br>
    {{#if showContent }}
      {{#each incidents}}
        <div class="card">
          <h5 class="card-header bg-primary text-white">{{this.userName}} - {{format_incident_date this.startDate}}</h5>
          <div class="card-body">
            <p><span class="badge bg-{{label_status_incident this.status}}">{{text_status_incident this.status }}</span></p>
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p><i class='bx bx-message nav_icon'></i> {{ this.totalInteractions }}</p>
            <a href="/dashboard/incident/{{this.id}}?origin=incidents" class="btn btn-primary">Acessar incidente</a>
          </div>
        </div>
        <br>
      {{/each}}
      <br>
    {{else}}
      <br>
      <div class="row mx-5 d-flex justify-content-center">
        <div class="col-3 d-flex justify-content-center">
          <h5>Nenhum incidente encontrado</h5>
        </div>
      </div>
    {{/if}}
  </div>
</body>