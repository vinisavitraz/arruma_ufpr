<body id="body-pd">
  {{>header}}
  <div class="container-fluid">
    <br>
    <br>
    <div class="row mx-4">
      <div class="col-8">
        <h1>Meus incidentes</h1>
      </div>
      {{#if (is_admin user.role)}}
      {{else}}
        <div class="col-2">
          <a class="btn btn-primary" href="/dashboard/incident/create?origin=userIncidents" role="button">Novo incidente</a>
        </div>
      {{/if}}
    </div>
    <br>
    <br>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link {{ set_active_tab "aberto" activeTab}}" href="/dashboard/incident/user?status=aberto">Abertos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link {{ set_active_tab "pendente" activeTab}}" href="/dashboard/incident/user?status=pendente">Em atendimento</a>
            </li>
            <li class="nav-item">
              <a class="nav-link {{ set_active_tab "fechado" activeTab}}" href="/dashboard/incident/user?status=fechado">Finalizados</a>
            </li>
            <li class="nav-item">
              <a class="nav-link {{ set_active_tab "" activeTab}}" href="/dashboard/incident/user">Todos</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <br>
    {{#if showContent }}
      {{#each incidents}}
        <div class="col-10 rounded bg-white">
          <br>
          <div class="row mx-4">
            <div class="col-3 d-flex justify-content-start">
              <h4>{{this.title}}</h4>
            </div>
            <div class="col-2 d-flex justify-content-start">
              <h6>{{this.userName}}</h6>
            </div>
            <div class="col-7 d-flex justify-content-end">
              <h4>{{format_incident_date this.startDate}}</h4>
            </div>
          </div>
          <br>
          <div class="row mx-5">
            <div class="col-12 d-flex justify-content-center">
              <p>{{this.description}}</p>
            </div>
          </div>
          <br>
          <div class="row mx-5">
            <div class="col-1">
              <span class="badge bg-{{label_status_incident this.status}}">{{text_status_incident this.status }}</span>
            </div>
            <div class="col-1">
               <i class='bx bx-message nav_icon'></i> {{ this.totalInteractions }}
            </div>
            <div class="col-10 d-flex justify-content-end">
              <a class="btn btn-primary" href="/dashboard/incident/{{this.id}}?origin=userIncidents">Acessar incidente</a>
            </div>
          </div>
          <br>
        </div>
        <br>
      {{/each}}
      <br>
    {{else}}
      <br>
      <div class="row mx-5 d-flex">
        <div class="col-3 justify-content-center">
          <h5>Nenhum incidente encontrado</h5>
        </div>
      </div>
    {{/if}}
  </div>
</body>