<body>
	<div class="container-fluid d-flex align-items-center justify-content-center bg-light">
    <div class="border bg-white border-2 rounded">
		<br>
		<div class="mx-5">
			<img src="/assets/logo.png" class="img-fluid" width="300" height="100" alt="">
		</div>
		<hr class="bg-dark border-1 border-top border-dark mx-3">
		<br>
		<form method="POST" action="/dashboard/forgot-password" class="needs-validation" novalidate="" autocomplete="off">
			<div class="row mx-5">
				<label class="mb-2 text-muted" for="email">Email</label>
				<input id="email" type="email" class="form-control" name="email" value="" required autofocus>
				<div class="invalid-feedback">
					Email inv√°lido
				</div>
			</div>
			<br>
			<br>
			<div class="row mx-5">
				<button type="submit" class="btn btn-primary-light-color btn-lg ms-auto">Recuperar senha</button>
			</div>
      <br>
      <br>
      {{#if showError }}
          {{#each errors}}
            <div class="row mx-1 d-flex justify-content-center">
              <div class="col-sm-4">
                <p class="text-danger">{{this}}</p>
              </div>
            </div>
          {{/each}}
        {{/if}}
      <div class="row mx-5">
				<a class="btn btn-secondary-light-color btn-lg ms-auto" href="/dashboard/login" role="button">Voltar</a>
			</div>
			<br>
			<br>
		</form>
    </div>
</div>

</body>