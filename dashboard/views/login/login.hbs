<body>
	<div class="container-fluid d-flex align-items-center justify-content-center bg-light">
		<div class="border bg-white border-2 rounded">
			<br>
			<div class="mx-5">
				<img src="/assets/logo.png" class="img-fluid" width="300" height="100" alt="">
			</div>
			<hr class="bg-dark border-1 border-top border-dark mx-3">
			<br>
			<form method="POST" action="/dashboard/login" class="needs-validation" novalidate="" autocomplete="off">
				<div class="row mx-5">
					<label class="mb-2 text-muted" for="email">Email</label>
					<input id="username" type="email" class="form-control" name="username" value="" required autofocus>
					<div class="invalid-feedback">
						Email inválido
					</div>
				</div>
				<br>
				<div class="row mx-5">
					<label class="mb-2 text-muted" for="password">Senha</label>
					<input id="password" type="password" class="form-control" name="password" required>
					<div class="invalid-feedback">
						Senha inválida
					</div>
				</div>
				<br>
				<div class="me-5">
					<a href="/dashboard/forgot-password" class="float-end">Esqueci minha senha</a>
				</div>
				<br>
				<br>
				{{#if error}}
					<div class="row mx-2 d-flex justify-content-center">
						<p class="text-danger">{{ errorMessage }}</p>
					</div>
					<br>
				{{/if}}
				
				<div class="row mx-5">
					<button type="submit" class="btn btn-primary btn-lg ms-auto">Login</button>
				</div>
				<br>
				<br>
			</form>
		</div>
	</div>
</body>