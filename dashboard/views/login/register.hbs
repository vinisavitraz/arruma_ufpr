<body>
	<div class="container-fluid d-flex align-items-center justify-content-center bg-light">
		<div class="border bg-white border-2 rounded">
			<br>
			<div class="mx-5">
				<img src="/assets/logo.png" class="img-fluid" width="300" height="100" alt="">
			</div>
			<hr class="bg-dark border-1 border-top border-dark mx-3">
      <br>
			<form method="POST" action="/dashboard/register" class="needs-validation" novalidate="" autocomplete="off">
				<div class="row mx-5">
					<label class="mb-2 text-muted" for="email">Email</label>
					<input id="email" type="email" class="form-control" name="email" value="{{ user.email }}" placeholder="Ex: joao.silva@mail.com" required autofocus>
				</div>
				<br>
				<div class="row mx-5">
					<label class="mb-2 text-muted" for="name">Nome</label>
					<input id="name" type="text" class="form-control" name="name" value="{{ user.name }}"  placeholder="Ex: João Silva" required>
				</div>
        <br>
				<div class="row mx-5">
					<label class="mb-2 text-muted" for="password">CPF</label>
					<input id="document" type="text" class="form-control" name="document" value="{{ user.document }}" placeholder="Ex. 806.949.290-26" required>
				</div>
        <br>
				<div class="row mx-5">
					<label class="mb-2 text-muted" for="password">Telefone</label>
					<input id="phone" type="text" class="form-control" name="phone" value="{{ user.phone }}" placeholder="Ex: (41)99999-9999" required>
				</div>
        <br>
				<div class="row mx-5">
					<label class="mb-2 text-muted" for="address">Endereço</label>
					<input id="address" type="text" class="form-control" name="address" value="{{ user.address }}" placeholder="Ex: Rua Amarela, 10 - Curitiba" required>
				</div>
        <br>
				<div class="row mx-5">
					<label class="mb-2 text-muted" for="password">Senha</label>
					<input id="password" type="password" class="form-control" name="password" value="{{ user.password }}" placeholder="Digite a senha" required>
				</div>
        <br>
				<div class="row mx-5">
					<label class="mb-2 text-muted" for="confirmPassword">Confirmar senha</label>
					<input id="confirmPassword" type="password" class="form-control" name="confirmPassword" value="{{ user.confirmPassword }}" placeholder="Confirme a senha" required>
				</div>
        <br>
				<br>
        {{#if showError }}
          {{#each errors}}
            <div class="row mx-1 d-flex justify-content-center">
              <div class="col-sm-6">
                <p class="text-danger">{{this}}</p>
              </div>
            </div>
          {{/each}}
        {{/if}}
				<div class="row mx-5">
					<button type="submit" class="btn btn-primary-light-color btn-lg ms-auto">Criar nova conta</button>
				</div>
        <br>
        <div class="row mx-5">
					<a href="/dashboard" class="btn btn-secondary-light-color btn-lg ms-auto">Voltar</a>
				</div>
				<br>
				<br>
			</form>
		</div>
	</div>
</body>