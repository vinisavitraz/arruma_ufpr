<body>
	<div class="container-fluid d-flex align-items-center justify-content-center bg-light">
		<div class="border bg-white border-2 rounded">
			<br>
			<div class="mx-5">
				<img src="/assets/logo.png" class="img-fluid" width="300" height="100" alt="">
			</div>
			<hr class="bg-dark border-1 border-top border-dark mx-3">
      <br>
			<form method="POST" action="/dashboard/register" class="needs-validation" novalidate="" autocomplete="off">
        <input type="hidden" id="role" name="role" value="1">
				<div class="row mx-5">
					<label class="mb-2 text-muted" for="email">Email</label>
					<input id="email" type="email" class="form-control" name="email" value="{{ user.email }}" required autofocus>
				</div>
				<br>
				<div class="row mx-5">
					<label class="mb-2 text-muted" for="name">Nome</label>
					<input id="name" type="text" class="form-control" name="name" value="{{ user.name }}" required>
				</div>
        <br>
				<div class="row mx-5">
					<label class="mb-2 text-muted" for="password">CPF</label>
					<input id="document" type="text" class="form-control" name="document" value="{{ user.document }}" required>
				</div>
        <br>
				<div class="row mx-5">
					<label class="mb-2 text-muted" for="password">Telefone</label>
					<input id="phone" type="text" class="form-control" name="phone" value="{{ user.phone }}" required>
				</div>
        <br>
				<div class="row mx-5">
					<label class="mb-2 text-muted" for="address">Endere√ßo</label>
					<input id="address" type="text" class="form-control" name="address" value="{{ user.address }}" required>
				</div>
        <br>
				<br>
        {{#if showError }}
          {{#each errors}}
            <div class="row mx-1 d-flex justify-content-center">
              <div class="col-sm-10">
                <p class="text-danger">{{this}}</p>
              </div>
            </div>
          {{/each}}
        {{/if}}
				<div class="row mx-5">
					<button type="submit" class="btn btn-primary btn-lg ms-auto">Criar nova conta</button>
				</div>
        <br>
        <div class="row mx-5">
					<a href="/dashboard" class="btn btn-light btn-lg ms-auto">Voltar</a>
				</div>
				<br>
				<br>
			</form>
		</div>
	</div>
</body>