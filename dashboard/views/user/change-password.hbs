<body id="body-pd">
  {{>header}}
  <a class="btn btn-primary btn-lg" href="/dashboard/user" role="button">Voltar</a>
  <div class="container">
  <main>
    <div class="py-5 text-justify">
      <h2>Usu√°rio</h2>
      <br>
    </div>
    {{#if showError }}
      {{#each errors}}
        <div class="row mx-3">
          <div class="col-sm-4">
            <p class="text-danger">ERRO: {{this}}</p>
          </div>
        </div>
      {{/each}}
    {{/if}}
    {{#if showSuccess }}
      <div class="row mx-3">
        <div class="col-sm-4">
          <p class="text-success">Senha atualizada com sucesso!</p>
        </div>
      </div>
    {{/if}}
    <div class="row g-5">
      <div class="col-md-12 col-lg-10">
        <h4 class="mb-3">Troca de senha</h4>
        <form method="POST" action="/dashboard/user/change-password" class="needs-validation" novalidate="" autocomplete="off">
          <input type="hidden" id="userId" name="userId" value="{{user.id}}">
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="password" class="form-label">Nova senha</label>
              <input type="password" class="form-control" id="password" name="password" value="{{ passwordForm.password }}">
            </div>

            <div class="col-sm-6">
              <label for="confirmPassword" class="form-label">Confirmar senha</label>
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" value="{{ passwordForm.confirmPassword }}">
            </div>
          </div>
          <hr class="my-4">

          <button class="w-100 btn btn-primary btn-lg" type="submit">Atualizar senha</button>
        </form>
      </div>
    </div>
  </main>
  <br>
  <br>
</body>