<body id="body-pd">
  {{>header}}
  <div class="container-fluid">
    <br>
    <br>
    <div class="row g-5">
      <div class="col-12 col-sm-12 col-md-6 col-lg-8">
        <h1>Itens</h1>
      </div>
      <div class="col-12 col-sm-12 col-md-6 col-lg-4">
        <a class="btn btn-primary-light-color btn-lg" href="/dashboard/item/create" role="button">Novo item</a>
      </div>
    </div>
    <br>
    <br>
    <br>
    <div id="searchForm" class="{{ classSearchForm }}">
      <div class="row g-5">
        <div class="col-md-12 col-lg-10">
          <a href="{{ uri }}" class="btn btn-danger border border-3">Cancelar pesquisa</a>
          <br>
          <br>
          <form method="POST" action="/dashboard/item/search" class="needs-validation" novalidate="" autocomplete="off">
            <div class="row g-3">
              <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                <label for="itemId" class="form-label">ID</label>
                <input type="text" class="form-control" id="itemId" name="itemId" placeholder="Ex: 1234" value="{{ content.itemId }}">
              </div>
              <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                <label for="itemName" class="form-label">Nome</label>
                <input type="text" class="form-control" id="itemName" name="itemName" placeholder="Ex: Projetor" value="{{ content.itemName }}">
              </div>
              <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                <label for="itemDescription" class="form-label">Descrição</label>
                <input type="text" class="form-control" id="itemDescription" name="itemDescription" placeholder="Ex: Projetor amarelo" value="{{ content.itemDescription }}">
              </div>
              <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                <label for="locationId" class="form-label">Local</label>
                <select class="form-select form-control" id="locationId" name="locationId">
                  {{#select content.locationId}}
                    <option value="0">Selecionar...</option>
                    {{#each locations}}
                      <option value="{{ this.id }}">{{ this.name }}</option>
                    {{/each}}
                  {{/select}}
                </select>
              </div>
            </div>
            <br>
            <button type="submit" class="btn border border-3">Pesquisar <i class='bx bx-search nav_icon'></i></button>
          </form>
          <br>
        </div>
      </div>
    </div>
    <div id="searchButton" class="{{ classSearchButton }}">
      <button id="showSearchFormButton" class="btn border border-3">Pesquisar <i class='bx bx-search nav_icon'></i></button>
    </div>
    <br>
    <br>
    {{#if showContent }}
    <div class="row g-3 d-flex flex-row-reverse">
        <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-2">
          <nav aria-label="Páginas">
            <ul class="pagination">
              {{#each pagination.pages}}
                <li class="page-item">
                  <a class="page-link" href="{{ this.pageUrl }}">{{ this.pageNumber }}</a>
                </li>
              {{/each}}
            </ul>
          </nav>
        </div>
      <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-2">
        <select class="form-select" name="limit" id="registers-per-page">
          {{#select content.maxPerPage}}
            <option disabled selected value>Registros por página</option>
            <option data-url="{{ incidents_registers_per_page_url "1" uri content }}" value="1">1 registro</option>
            <option data-url="{{ incidents_registers_per_page_url "10" uri content }}" value="10">10 registros</option>
            <option data-url="{{ incidents_registers_per_page_url "25" uri content }}" value="25">25 registros</option>
            <option data-url="{{ incidents_registers_per_page_url "50" uri content }}" value="50">50 registros</option>
            <option data-url="{{ incidents_registers_per_page_url "100" uri content }}" value="100">100 registros</option>
          {{/select}}
        </select>
      </div>
    </div>
    {{/if}}
    <br>
    {{#if showContent }}
      {{#each items}}
        <div class="card">
          <h5 class="card-header bg-primary-color text-white">#{{this.id}} - {{this.name}}</h5>
          <div class="card-body">
            <h4 class="card-title">{{this.name}}</h4>
            <br>
            <h5 class="card-text">{{this.description}}</h5>
            <br>
            <p><i class='bx bx-buildings nav_icon'></i> {{ this.locationName }}</p>
            <a href="/dashboard/item/{{this.id}}" class="btn btn-primary-light-color">Editar</a>
            <a href="/dashboard/item/delete/{{this.id}}" onclick="return confirm('Tem certeza que deseja excluir esse registro?')" class="btn btn-danger">Excluir</a>
          </div>
        </div>
        <br>
      {{/each}}
      <br>
    {{else}}
      <br>
      <div class="row mx-5 d-flex justify-content-center">
        <div class="col-3 d-flex justify-content-center">
          <h5>Nenhum item encontrado</h5>
        </div>
      </div>
    {{/if}}
  </div>
</body>